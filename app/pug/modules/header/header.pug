      ul.social.nav__social
        li.social__item
          a(href="#", target="_blank").social__link
            +icon('skype', 'social__icon')
        li.social__item
          a(href="#", target="_blank").social__link
            +icon('telegram', 'social__icon')
        li.social__item
          a(href="#", target="_blank").social__link
            +icon('viber', 'social__icon')
